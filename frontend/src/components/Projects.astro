---
// Projects.astro
import FadeIn from './react/FadeIn';
import ProjectsCarousel from './react/ProjectsCarousel';

const projects = [
  {
    id: "atria",
    title: "Atria",
    description: "A comprehensive virtual event management platform built with React, Flask, and PostgreSQL. Features complex data relationships, secure authentication, and scalable organization-event hierarchies.",
    tech: ["React", "Flask", "PostgreSQL", "JWT", "Flask-SQLAlchemy", "Flask-Smorest"],
    liveLink: "https://atria.sbtl.dev",
    githubLink: "https://github.com/thesubtleties/atria",
    image: "/public/images/atria-screenshot.jpg" 
  },
  {
    id: "spookyspot",
    title: "SpookySpot",
    description: "A Halloween-themed property rental platform inspired by Airbnb. Implements secure file storage using MinIO and robust user authentication system.",
    tech: ["Express", "React", "PostgreSQL", "Sequelize", "MinIO"],
    liveLink: "https://spookyspot.sbtl.dev",
    githubLink: "https://github.com/thesubtleties/spookyspot",
    image: "/public/images/spookyspot-screenshot.jpg" 
  },
  {
    id: "taskflow",
    title: "TaskFlow",
    description: "Project management tool featuring sprint timeline visualization and intuitive task management interface built with React and Flask-SQLAlchemy.",
    tech: ["React", "Flask", "SQLAlchemy", "PostgreSQL"],
    liveLink: "https://taskflow.sbtl.dev",
    githubLink: "https://github.com/JustCodeIt760/Mod7",
    image: "/public/images/taskflow-screenshot.jpg" 
  },
    {
    id: "midnightAnalog",
    title: "Hills House",
    description: "Modern music artist website with headless CMS. Features a unique Club LED Wall visual effect system, creating immersive analog-inspired visuals with dynamic content management.",
    tech: ["Next.js", "TypeScript", "Tailwind CSS", "React"],
    liveLink: "https://itshillshouse.sbtl.dev",
    // githubLink not provided - private repository
  }
];
---

<section id="projects" class="min-h-screen flex items-center justify-center px-4 py-16">
  <div class="projects-container">
    <FadeIn client:visible>
      <h2 class="section-title">Projects</h2>
    </FadeIn>
    
    <div class="projects-carousel-container">
      <ProjectsCarousel client:visible projects={projects} />
    </div>
  </div>
</section>
  
  <style>
    .projects-container {
      max-width: 1200px;
      width: 100%;
      margin: 0 auto;
    }
  
    .section-title {
      font-family: var(--font-space-grotesk);
      font-size: 3rem;
      color: var(--color-primary);
      text-align: center;
      margin-bottom: 3rem;
    }
  
    .projects-carousel-container {
      width: 100%;
      padding: 2rem 80px 4rem;
      min-height: 500px;
      position: relative;
    }
    
    /* Fade out edges */
    .projects-carousel-container::before,
    .projects-carousel-container::after {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      width: 100px;
      pointer-events: none;
      z-index: 10;
    }
    
    .projects-carousel-container::before {
      left: 0;
      background: linear-gradient(90deg, 
        var(--color-background) 0%, 
        transparent 100%
      );
    }
    
    .projects-carousel-container::after {
      right: 0;
      background: linear-gradient(-90deg, 
        var(--color-background) 0%, 
        transparent 100%
      );
    }
    
    @media (max-width: 1200px) {
      .projects-carousel-container {
        padding: 2rem 20px 4rem;
      }
    }

    /* Swiper container styles */
    :global(.projects-swiper) {
      width: 100%;
      padding: 20px 0;
      overflow: hidden;
    }

    :global(.projects-swiper .swiper-slide) {
      height: auto;
    }

    :global(.projects-swiper .project-card) {
      height: 450px;
      width: 100%;
      margin: 0 auto;
    }
    
    /* Navigation buttons positioned outside */
    :global(.swiper-button-prev),
    :global(.swiper-button-next) {
      color: var(--color-primary);
      top: 50%;
      transform: translateY(-50%);
      width: 44px;
      height: 44px;
    }
    
    :global(.swiper-button-prev) {
      left: -60px;
    }
    
    :global(.swiper-button-next) {
      right: -60px;
    }
    
    :global(.swiper-button-prev::after),
    :global(.swiper-button-next::after) {
      font-size: 24px;
    }

    /* Pagination dots styling */
    :global(.swiper-pagination) {
      position: relative;
      margin-top: 2rem;
    }

    :global(.swiper-pagination-bullet) {
      background: var(--color-accent);
      opacity: 0.6;
      width: 8px;
      height: 8px;
      transition: all 0.3s ease;
    }

    :global(.swiper-pagination-bullet-active) {
      background: var(--color-primary);
      opacity: 1;
      width: 10px;
      height: 10px;
    }
  
    @media (max-width: 768px) {
      :global(.swiper-button-prev),
      :global(.swiper-button-next) {
        display: none;
      }
      
      /* Allow some padding for glow on mobile */
      .projects-carousel-container {
        padding: 2rem 15px 4rem;
      }
      
      :global(.projects-swiper) {
        padding: 20px 5px;
      }
      
      /* Hide edge fades on mobile */
      .projects-carousel-container::before,
      .projects-carousel-container::after {
        display: none;
      }
    }
  </style>