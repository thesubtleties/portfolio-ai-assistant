    tech: ["Python", "FastMCP", "React", "Astro", "Docker", "Radix UI", "Tailwind CSS"],
    liveLink: "#",
    githubLink: "https://github.com/thesubtleties/StyleATC"
  },
  {
    id: "linkedinBatch",
    title: "LinkedIn Batch LLM",
    description: "Job scraper that searches by keyword and compares listings to resume via Claude API for intelligent matching. Features parallel city scraping and bulk analysis. Private repo available on request.",
    tech: ["Python", "Claude API", "Docker", "Beautiful Soup", "SOCKS Proxy"],
    liveLink: "#",
    githubLink: "#"
  }
];

---

<section id="projects" class="projects-section min-h-screen flex items-center justify-center px-4 py-16">
  <div class="projects-container">
    <FadeIn client:visible>
      <h2 class="section-title">Projects</h2>
    </FadeIn>
    
    <div class="projects-carousel-container">
      <ProjectsCarousel client:visible projects={projects} />
    </div>
  </div>
</section>
  
  <style>
    .projects-container {
      max-width: 1200px;
      width: 100%;
      margin: 0 auto;
    }
  
    .section-title {
      font-family: var(--font-space-grotesk);
      font-size: 3rem;
      color: var(--color-primary);
      text-align: center;
      margin-bottom: 3rem;
    }
  
    .projects-carousel-container {
      width: 100%;
      padding: 2rem 80px 4rem;
      min-height: 500px;
      position: relative;
    }
    
    /* Fade out edges */
    .projects-carousel-container::before,
    .projects-carousel-container::after {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      width: 100px;
      pointer-events: none;
      z-index: 10;
    }
    
    .projects-carousel-container::before {
      left: 0;
      background: linear-gradient(90deg, 
        var(--color-background) 0%, 
        transparent 100%
      );
    }
    
    .projects-carousel-container::after {
      right: 0;
      background: linear-gradient(-90deg, 
        var(--color-background) 0%, 
        transparent 100%
      );
    }
    
    @media (max-width: 1200px) {
      .projects-carousel-container {
        padding: 2rem 20px 4rem;
      }
    }

    /* Swiper container styles */
    :global(.projects-swiper) {
      width: 100%;
      padding: 20px 0;
      overflow: hidden;
    }

    :global(.projects-swiper .swiper-slide) {
      height: auto;
    }

    :global(.projects-swiper .project-card) {
      height: 450px;
      width: 100%;
      margin: 0 auto;
    }
    
    /* Remove skeleton loader styles - not needed */
    
    /* Navigation buttons positioned outside */
    :global(.swiper-button-prev),
    :global(.swiper-button-next) {
      color: var(--color-primary);
      top: 50%;
      transform: translateY(-50%);
      width: 44px;
      height: 44px;
    }
    
    :global(.swiper-button-prev) {
      left: -60px;
    }
    
    :global(.swiper-button-next) {
      right: -60px;
    }
    
    :global(.swiper-button-prev::after),
    :global(.swiper-button-next::after) {
      font-size: 24px;
    }

    /* Pagination dots styling */
    :global(.swiper-pagination) {
      position: relative;
      margin-top: 2rem;
    }

    :global(.swiper-pagination-bullet) {
      background: var(--color-accent);
      opacity: 0.6;
      width: 8px;
      height: 8px;
      transition: all 0.3s ease;
    }

    :global(.swiper-pagination-bullet-active) {
      background: var(--color-primary);
      opacity: 1;
      width: 10px;
      height: 10px;
    }
  
    @media (max-width: 768px) {
      /* Adjust section padding for better vertical centering */
      .projects-section {
        padding-top: 2rem;
        padding-bottom: 2rem;
      }
      
      :global(.swiper-button-prev),
      :global(.swiper-button-next) {
        display: none;
      }
      
      /* Reduce title margin on mobile */
      .section-title {
        margin-bottom: 1.5rem;
        font-size: 2.5rem;
      }
      
      /* Full width container on mobile to allow glow to edge of screen */
      .projects-carousel-container {
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        padding: 1rem 0 2rem;  /* Reduced padding */
      }
      
      :global(.projects-swiper) {
        padding: 20px 0;
      }
      
      /* Hide edge fades on mobile */
      .projects-carousel-container::before,
      .projects-carousel-container::after {
        display: none;
      }
    }

    /* Responsive scaling for laptop screens with limited height */
    @media (max-height: 900px) and (min-width: 768px) {
      .section-title {
        /* Keep original size for Projects title */
        font-size: 3rem;
        margin-bottom: clamp(1.5rem, 3vh, 3rem);
      }

      .projects-carousel-container {
        padding: clamp(1rem, 2vh, 2rem) 80px clamp(2rem, 4vh, 4rem);
        min-height: clamp(350px, 50vh, 500px);
      }

      :global(.projects-swiper .project-card) {
        height: clamp(350px, 50vh, 450px);
      }

      :global(.swiper-pagination) {
        margin-top: clamp(1rem, 2vh, 2rem);
      }
    }
  </style>